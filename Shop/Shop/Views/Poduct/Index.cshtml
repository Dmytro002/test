@model IEnumerable<Shop.Models.Product>



<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Product
            </a>
            
        </div>
    </div>
    
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price Order
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <td width="50%" >@obj.Name</td>
                <td width="50%" >@obj.Price</td>
                <tr class="text-center">
                    <div class="w-75 btn-group" role="group"></div>
                    <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                        <i class="fas fa-edit"> </i>
                    </a>
                </tr>

            }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exists.</p>
    }
</div>